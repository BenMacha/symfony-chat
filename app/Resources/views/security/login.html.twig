
{% include "@BenmachaTemplate/Template/head.html.twig" %}
<link rel="stylesheet" href="{{ asset('bundles/benmachatemplate/css/separate/pages/login.min.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/benmachatemplate/css/separate/vendor/pnotify.min.css') }}">

{% include "@BenmachaTemplate/Template/head-end.html.twig" %}

<body>
<div class="page-center">
    <div class="page-center-in">
        <div class="container-fluid">
            <form class="sign-box" action="{{ path("login") }}" method="post">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                <div class="sign-avatar">
                    <img src="{{ asset('apple-touch-icon.png') }}" alt="">
                </div>

                <header class="sign-title">{{ 'Chat'|trans }}</header>

                <div class="form-group">
                    <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'Username'|trans }}"/>
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" placeholder="{{ 'Password'|trans }}"/>
                </div>
                <div class="form-group">

                    <div class="float-right reset">
                        <a href="{{ path('registration') }}">{{ 'Registration'|trans }}</a>
                    </div>
                </div>
                <button type="submit" id="_submit" name="_submit" class="btn btn-rounded">{{ 'Submit'|trans }}</button>
            </form>
        </div>
    </div>
</div>
{% include "@BenmachaTemplate/Template/footer.html.twig" %}
<script type="text/javascript" src="{{ asset('bundles/benmachatemplate/js/lib/match-height/jquery.matchHeight.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/benmachatemplate/js/lib/pnotify/pnotify.js') }}"></script>

<script>
    $(function() {
        {% if error %}
        PNotify.prototype.options.styling = "bootstrap3";

        new PNotify({
            title: 'Oh No!',
            text: '{{ error.messageKey|trans(error.messageData, 'security') }}',
            type: 'error',
            icon: 'font-icon font-icon-warning',
            addclass: 'alert-with-icon'
        });

        {% endif %}

    });
</script>
{% include "@BenmachaTemplate/Template/footer.html.twig" %}


